<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/nav_icon"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <!--头部信息开始-->
    <TextView
        android:id="@+id/item_username"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@+id/item_head"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="1dp"
        android:layout_marginStart="5dp"
        android:text="灰原同学"
        android:textColor="#FA7298"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/item_modifyDate"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        app:layout_constraintLeft_toRightOf="@+id/item_head"
        app:layout_constraintTop_toBottomOf="@+id/item_username"
        android:layout_marginTop="3dp"
        android:layout_marginStart="5dp"
        android:text="⏲ 2021-05-05 12:45"
        android:textSize="10dp"
        android:textColor="#99A2AA"/>

    <TextView
        android:id="@+id/item_weather"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        app:layout_constraintLeft_toRightOf="@+id/item_modifyDate"
        app:layout_constraintTop_toBottomOf="@+id/item_username"
        android:layout_marginTop="3dp"
        android:layout_marginStart="5dp"
        android:text=" 多云 25℃"
        android:textSize="10dp"
        android:textColor="#99A2AA"/>

    <TextView
        android:id="@+id/item_location"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        app:layout_constraintLeft_toRightOf="@+id/item_head"
        app:layout_constraintTop_toBottomOf="@+id/item_weather"
        android:layout_marginTop="1dp"
        android:layout_marginStart="5dp"
        android:text="⚓ 广东省河源市龙川县老隆镇文化广场"
        android:textSize="10dp"
        android:textColor="#99A2AA"/>
    <!--头部信息结束-->
    <!--正文左边空白-->
    <TextView
        android:id="@+id/blank_area_left"
        android:layout_width="30dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/item_head"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/item_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_weight="1"

        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/item_location"
        app:layout_constraintLeft_toRightOf="@+id/blank_area_left"
        app:layout_constraintRight_toLeftOf="@+id/blank_area_right"
        />
    <!--正文右边空白-->
    <TextView
        android:id="@+id/blank_area_right"
        android:layout_width="30dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/item_head"
        app:layout_constraintRight_toRightOf="parent"/>
    <!--图片区开始-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_pic_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/item_content"
        app:layout_constraintLeft_toRightOf="@id/blank_area_left"
        app:layout_constraintRight_toLeftOf="@id/blank_area_right" />
    <!--图片区结束-->
    <!--按钮区-->
    <Button
        android:id="@+id/item_btn_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/blank_area_right"
        app:layout_constraintTop_toBottomOf="@+id/item_pic_area"
        android:text="评论"/>
    <Button
        android:id="@+id/item_btn_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/item_btn_comment"
        app:layout_constraintTop_toBottomOf="@+id/item_pic_area"
        android:layout_marginRight="5dp"
        android:text="删除"/>
</androidx.constraintlayout.widget.ConstraintLayout>