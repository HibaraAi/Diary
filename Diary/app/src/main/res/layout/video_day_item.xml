<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/video_day_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2021-05-10 星期一"
        android:paddingLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/video_day_item_ry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/video_day_item_date"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/video_day_item_ry" />
</androidx.constraintlayout.widget.ConstraintLayout>